#!/bin/bash
set -e

tstmp=$(date +%Y-%m-%d:%H:%M:%S)
cluster_size=10
ec2_type="dc1.large"
cluster_type='single-node'
if [ $cluster_size -gt 1 ]
then
    cluster_type='multi-node'
fi

set -x
aws redshift create-cluster                     \
 --cluster-identifier 'normalizer10'            \
 --node-type "${ec2_type}"                      \
 --cluster-type "${cluster_type}"               \
 --number-of-nodes "${cluster_size}"            \
 --master-username 'hvuser'                     \
 --master-user-password 'HV1user2'
